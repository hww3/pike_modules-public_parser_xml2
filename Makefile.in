# $Id: Makefile.in,v 1.22 2005-10-18 21:29:55 hww3 Exp $
@make_variables@
VPATH=@srcdir@
OBJS=Node.o XML2.o Constants.o SAX.o Stylesheet.o XMLReader.o RelaxNG.o
MODDIR=Public.pmod/Parser.pmod/
MODNAME=XML2
AUTODOC_SRC_IN=XML2.c Node.c SAX.c Constants.c Stylesheet.c XMLReader.c RelaxNG.c

CFLAGS=@XML2_CFLAGS@
LDFLAGS=@XML2_LIBS@

MODULE_LDFLAGS=@LDFLAGS@ @LIBS@

CONFIG_HEADERS=@CONFIG_HEADERS@

@dynamic_module_makefile@
@dependencies@

release:
	svn copy -m "tagging project" http://wush.net/svn/hww3/trunk http://wush.net/svn/hww3/tags/Public_Parser_XML2_RELEASE_1_${MIN}
	svn export http://wush.net/svn/hww3/tags/Public_Parser_XML2_RELEASE_1_${MIN}/pike_modules/Public_Parser_XML2 Public_Parser_XML2-1.${MIN}
	cd Public_Parser_XML2-1.${MIN} && \
	pike -x module --autoheader && pike -x module --autoconf && \
	rm -rf autom4*
	cp *.c Public_Parser_XML2-1.${MIN}
	gtar czvf Public_Parser_XML2-1.${MIN}.tar.gz Public_Parser_XML2-1.${MIN}
	pike upload_module_version.pike Public.Parser.XML2 1.${MIN} "GPL/LGPL/MPL"

